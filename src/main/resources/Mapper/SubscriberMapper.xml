<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.example.token.Mapper.SubscriberMapper">
    <!--定义一个名为BaseResultMap的返回类型-->
    <resultMap id="SubscriberBO" type="com.example.token.Entity.BO.subscriber.SubscriberBO">
        <id column="id" jdbcType="INTEGER" property="id" />
        <id column="type" jdbcType="VARCHAR" property="type" />
        <result column="subscriber" jdbcType="VARCHAR" property="subscriber" />
        <result column="message" jdbcType="VARCHAR" property="message" />
        <result column="status" jdbcType="VARCHAR" property="status" />
    </resultMap>
    <!--    按照type查询订阅者-->
    <select id="getSubscriberByType" resultMap="SubscriberBO">
        select * from subscriber where type = #{type,jdbcType=VARCHAR} and status = 1
    </select>

    <select id="getSubscriberList" resultMap="SubscriberBO">
        select * from subscriber
    </select>
    <update id="changeStatus">
        update subscriber set status=${status} where id=#{id}
    </update>
    </mapper>

